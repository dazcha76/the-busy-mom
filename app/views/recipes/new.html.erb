<h1>Add a New Recipe</h1>

<%= form_tag '/recipes', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name  %>
  </div>
  <div>
    Image: <%= file_field_tag 'picture' %>
  </div>
  <div>
    <%= label_tag :prep_time %>
    <%= text_field_tag :prep_time  %>
  </div>
  <div>
    <%= label_tag :directions  %>
    <%= text_field_tag :directions  %>
  </div>

<%= check_box_tag(:meal_type) %>
<%= label_tag(:meal_type, "Breakfast") %>

<%= check_box_tag(:meal_type) %>
<%= label_tag(:meal_type, "Lunch") %>

<%= check_box_tag(:meal_type) %>
<%= label_tag(:meal_type, "Dinner") %>

<%= check_box_tag(:meal_type) %>
<%= label_tag(:meal_type, "Snack") %>

  <div>
    <%= submit_tag "Add recipe" %>
  </div>
<% end %>