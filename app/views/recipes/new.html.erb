<h1>Add a New Recipe</h1>

<%= form_tag '/recipes', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name  %>
  </div>
  <div>
    <%= label_tag :image  %>
    <%= text_field_tag :image  %>
  </div>
  <div>
    <%= label_tag :prep_time %>
    <%= text_field_tag :prep_time  %>
  </div>
  <div>
    <%= label_tag :directions  %>
    <%= text_field_tag :directions  %>
  </div>
  <div>
    <%= submit_tag "Add recipe" %>
  </div>
<% end %>