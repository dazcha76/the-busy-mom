<div ng-app="app">
    {{ 2 + 2 }}
  <div ng-controller="recipesCtrl">
    {{ message }}

    <input>
    <button>Search</button>
  </div>
</div>

<h1>My Recipes</h1>

<a href="/recipes/new">Add Recipe</a>

<% @recipes.each do |recipe| %>
  <h3><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h3>
  <p><%= recipe.image %></p>
  <p>Prep Time: <%= recipe.prep_time %></p>
  <p><%= recipe.rating %></p>
<% end %>